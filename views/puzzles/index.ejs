<%- include('../partials/header') %>
<section class="puzzle-index" >
    <table>
        <thead>
            <tr>
                <th></th> 
            </tr>
        </thead>
        <tbody class="puzzle-index-body">
            <% puzzles.forEach(function(p) { %>
            <tr class="each-puzzle">
                <td><img src="<%= p.image %>" alt="" id="image-index"></td>
                <td><%= p.name %></td>
                <td><%= p.pieceAmount %> pieces</td>
                <td><a href="/puzzles/<%= p._id%>">Details</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</section>

<%- include('../partials/footer') %>

