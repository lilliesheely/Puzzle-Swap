<%- include('../partials/header')%>

<section>
<h1>This is a message show page</h1>

<table>
    <thead> 
        <tr>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% message.replies.forEach(function(m) { %> 
            <th><%= m.content %></th>
        <% }) %> 
    </tbody>    
</table>
    <form action="/messages/<%= message._id%>/replies" method="POST">
        <textarea name="content"></textarea>
        <input type="submit" value="Send Message">
    </form>
</section>


<%- include('../partials/footer')%>



